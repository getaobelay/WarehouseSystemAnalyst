@inherits LayoutComponentBase

<div class="@SidebarCssClass">

    <div class="top_navbar">
        <div class="hamburger" @onclick="ShowSidebar">
            <div class="one"></div>
            <div class="two"></div>
            <div class="three"></div>
        </div>
        <div class="top_menu">
            <div class="logo">
                <NavLink href="" Match="NavLinkMatch.All">
                    <span class="icon"><i class="fas fa-home"></i></span>
                    <span class="title">Home</span>
                </NavLink>
            </div>
            <ul>
                <li>
                    <a href="#">
                        <i class="fas fa-search"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fas fa-bell"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="sidebar">
        <ul>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-leaf"></i></span>
                    <span class="title">Nature</span>
                </a>
            </li>

            <li>
                <NavLink href="counter">
                    <span class="icon"><i class="fas fa-book"></i></span>
                    <span class="title">Books</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="sidebar">
                    <span class="icon"><i class="fas fa-file-video"></i></span>
                    <span class="title">Movies</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="sidebar">
                    <span class="icon"><i class="fas fa-volleyball-ball"></i></span>
                    <span class="title">Sports</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="layoutComponent">
                    <span class="icon"><i class="fas fa-blog"></i></span>
                    <span class="title">Blogs</span>
                </NavLink>

            </li>
            <li>
                <NavLink href="layoutComponent">
                    <span class="icon"><i class="fas fa-leaf"></i></span>
                    <span class="title">Nature</span>
                </NavLink>

            </li>
        </ul>
    </div>

    <div class="main_container">
        <div class="item">
            @Body
        </div>
    </div>
</div>
@code {

    private string SidebarCssClass => collapseSidebar ? "wrapper sidebar-collapse" : "wrapper";
    private bool collapseSidebar = false;

    private void ShowSidebar()
    {
        collapseSidebar = !collapseSidebar;
    }
}
